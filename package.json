{
  "name": "bharat-setu",
  "version": "0.1.0",
  "description": "Voice-first multilingual AI agent for government scheme discovery",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:lambda": "esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=lib/lambda.js --external:@aws-sdk/*",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "cdk": "cdk",
    "cdk:deploy": "cdk deploy",
    "cdk:synth": "cdk synth",
    "cdk:diff": "cdk diff",
    "clean": "rimraf lib cdk.out"
  },
  "keywords": [
    "aws",
    "cdk",
    "serverless",
    "ai",
    "voice",
    "multilingual"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "aws-cdk": "^2.117.0",
    "esbuild": "^0.27.3",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "rimraf": "^6.1.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-agent-runtime": "^3.490.0",
    "@aws-sdk/client-bedrock-runtime": "^3.490.0",
    "@aws-sdk/client-dynamodb": "^3.490.0",
    "@aws-sdk/client-polly": "^3.490.0",
    "@aws-sdk/client-s3": "^3.490.0",
    "@aws-sdk/client-transcribe-streaming": "^3.490.0",
    "@aws-sdk/lib-dynamodb": "^3.490.0",
    "aws-cdk-lib": "^2.117.0",
    "constructs": "^10.3.0",
    "fast-check": "^3.15.0",
    "source-map-support": "^0.5.21",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  }
}
